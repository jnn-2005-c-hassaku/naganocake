<div class="container">
	<div class="row">
		<div class="col-sm-8 no-gutters">
		  <h2>マイページ</h2>
		    <h2>登録情報</h2>
		    <tr>
		      <td>
             	<%= link_to "編集する", edit_customer_path(@customer.id), class: "edit_btn" %>
              </td>
               <td>
             	<%= link_to "パスワードを変更する", edit_customer_password_path(@customer), class: "edit_btn" %>
              </td>
            </tr>
            　<div class="form_cont">
	          	<%= form_for(@customer) do |f| %>
			        <div class="field">
			          <%= f.label :full_name, "氏名", class: "form_label" %>
			          <%= @customer.last_name %><%= @customer.first_name %>
			        </div>
			        <div class="field">
			          <%= f.label :full_name_kana, "カナ", class: "form_label" %>
			          <%= @customer.last_name_kana %><%= @customer.first_name_kana %>
			        </div>
			        <div class="field">
			          <%= f.label :postcode, "郵便番号", class: "form_label" %>
			          <%= @customer.postcode %>
			        </div>
			        <div class="field">
			          <%= f.label :address, "住所", class: "form_label" %>
			          <%= @customer.address %>
			        </div>
			        <div class="field">
			          <%= f.label :phone_number, "電話番号", class: "form_label" %>
			          <%= @customer.phone_number %>
			        </div>
			        <div class="field">
			          <%= f.label :email, "メールアドレス", class: "form_label" %>
			          <%= @customer.email %>
			        </div>
			        <% end %>
			          <h2>配送先</h2>
			            <tr>
					      <td>
			             	<%= link_to "一覧を見る", shipping_addresses_path(@customer.id), class: "edit_btn" %>
			              </td>
			            </tr>
			          <h2>注文履歴</h2>
                        <tr>
					      <td>
			             	<a href="" class="nav_txt">一覧を見る</a>
			              </td>
			            </tr>
	        　　</div>
	        </div>
	    </div>
	</div>
