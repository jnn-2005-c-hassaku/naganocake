<div class="container">
	<div class="row">
		<div class="col-sm-8 no-gutters">
			<h2>登録情報編集</h2>
				<%= form_for(@customer) do |f| %>
			        <div class="field">
			          <%= f.label :full_name, "名前", class: "form_label" %>
			          姓<%= f.text_field :last_name, class: "form_input" %>名<%= f.text_field :first_name, class: "form_input" %>
			        </div>
			        <div class="field">
			          <%= f.label :full_name_kana, "カナ", class: "form_label" %>
			          セイ<%= f.text_field :last_name_kana, class: "form_input" %>メイ<%= f.text_field :first_name_kana, class: "form_input" %>
			        </div>
			        <div class="field">
			          <%= f.label :postcode, "郵便番号", class: "form_label" %>
			          <%= f.text_field :postcode, class: "form_input" %>
			        </div>
			        <div class="field">
			          <%= f.label :address, "住所", class: "form_label" %>
			           <%= f.text_field :address, class: "form_input" %>
			        </div>
			        <div class="field">
			          <%= f.label :phone_number, "電話番号", class: "form_label" %>
			          <%= f.text_field :phone_number, class: "form_input" %>
			        </div>
			        <div class="field">
			          <%= f.label :email, "メールアドレス", class: "form_label" %>
			          <%= f.text_field :email, class: "form_input" %>
			        </div>
			        <div class="actions">
			          <%= f.submit "編集", class: "form_submit white_txt bold" %>
			        </div>
			        <div class="actions">
			        	<%= link_to "退会する", customers_confirm_path, class:"btn btn-danger"  %>
			        </div>
			        <% end %>

	   </div>
    </div>
</div>