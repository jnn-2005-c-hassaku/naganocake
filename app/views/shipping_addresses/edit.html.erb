<div class="container">
   <p id="notice"></p> 
    <div class="row">
      <div class="col-md-6 col-sm-offset-3">
  <h1>配送先編集</h1>
  <%= form_for(@shipping_address) do |f| %>
   
    <h4>郵便番号（ハイフンなし）</h4>
    <%= f.text_field :postcode, class:"col-xs-12" %>
    <h4>住所</h4>
    <%= f.text_area :address, class:"col-xs-12" %><br>
    <h4>宛名</h4>
    <%= f.text_area :direction, class:"col-xs-12" %><br>

    <%= f.submit '編集する', class:"btn btn-primary btn-block", style:"margin-top:40px;" %><br>
    <% end %>
     </div>
    </div>
   </div>
