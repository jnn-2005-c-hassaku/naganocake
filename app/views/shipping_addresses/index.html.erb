<div class="container">
<div class="row">
  <div class="col-sm-12 no-gutters">
   <h2>配送先登録/一覧</h2>
    <table>
    <tr>
        <%= form_for(@shipping_address) do |f| %>
        <h4>郵便番号（ハイフンなし）</h4>
        <%= f.text_field :postcode %>

        <h4>住所</h4>
        <%= f.text_field :address %><br>

        <h4>宛名</h4>
        <%= f.text_field :direction %><br>
       
        <%= f.submit '登録する' %>
         <% end %>
    </tr>
    </table>
    <table>
          <thead>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th colspan="3"></th>
          </thead>
           <tboby>
             <% @shipping_addresses.each do |shipping_address| %>
             <tr>
             	<td>
             	  <%= shipping_address.postcode %>
                </td>
             	<td>
             	  <%= shipping_address.address %>
             	</td>
             	<td>
             	  <%= shipping_address.direction %>
             	</td>
             	<td>
             	  <%= link_to "編集する", edit_shipping_address_path(shipping_address) %>
             	</td>
             	<td>
             	  <%= link_to "削除する", shipping_address_path(shipping_address), method: :delete, "data-confirm" => 'Are you sure?' %>
             	</td>
             </tr>
              <% end %>
    </table>
</div>
</div>