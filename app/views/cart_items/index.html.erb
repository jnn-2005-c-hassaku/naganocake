
<div class="row cart_items">
	<h2>カート一覧</h2>
	 <table class="table table-hover table-inverse">

		<thead>
	<tr>
			<th></th>
			<th>商品名</th>
			<th>単価(税込)</th>
			<th>数量</th>
			<th>小計</th>
			<th></th>
			<th colspan="3"></th>
		</tr>
		</thead>

		<tbody>
			<% @sum = 0 %>
				<% @cart_items.each do |cart_item| %>
			<tr>

				<td><%= cart_item.customer.last_name %></td>

				<td><%= cart_item.product.name %></td>

				<td><%= cart_item.product.price_with_tax(cart_item.product.price) %></td><%#税込金額を表示%>

				<% @sum += cart_item.subtotal(cart_item.product.price,cart_item.quantity) %>

				<td><%= cart_item.quantity %>個</td>

				<td><%= cart_item.subtotal(cart_item.product.price,cart_item.quantity) %>円</td>

				<td><%= link_to "この商品を取り消す",cart_item_path(cart_item), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"} %></td>

			</tr>

			<% end %>
		</tbody>

	</table>

		<%= button_to "全て削除", destroy_all_cart_items_path, method: :delete %>


	<div class="text-right">
	<h2>合計金額</h2>	
		<%= @sum %>

</div>

　　　　　　<p class="text-center">
			<%= link_to "買い物を続ける", products_path, class: "btn btn-primary btn-block " %>
		</p>

		<p class= "text-center">
		<%= link_to "情報入力に進む", new_order_path, class: "btn btn-success btn-block" %>
</p>

</div> 


