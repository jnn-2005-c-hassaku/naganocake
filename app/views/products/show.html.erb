  <div class="row">
   <%= render "home/sidebar", categories: Category.all %>
   <div class="col-sm-8">
    <h2 class="midashi_txt brown_txt bold">商品説明</h2>
     <div class= "col-xs-12 col-md-8" >
      <%= attachment_image_tag @product, :image, :fill, 300 ,200, format: 'jpeg', class: "product_img", fallback: "purin.jpg" %>
    </div>
    <div class="col-md-4 product_right">
      <p class="txtl bold"><%= @product.name %></p>

      <p class="txts"><%= @product.description %></p><br>

      <p class="txtm">¥<%= @product.price_with_tax(@product.price) %>円(税込）</p>
      <%= form_for @cart_item do |f| %>

      <p><%= f.hidden_field :product_id, value: @product.id %></p>

      <p><%= f.select :quantity, options_for_select(1..20), include_blank: "個数選択" %><%= f.submit "カートに入れる" %></p>

      <% end %>
    </div>
  </div>
</div>