<table>
    <tbody>

      <tr>
        <td><%= attachment_image_tag(@product, :image, :fill, 100, 100, fallback: "no_image.jpg") %></td>

        <td><%= @product.name %></td>

        <td><%= @product.description %></td>


        <td><%= @product.price %>円</td>


        <td><%= @product.price_with_tax(@product.price) %>円</td>
        <%#税込価格表示%>

        <td><%= @product.category.name %></td>

                  <td><% if @product.sale_status == true %>
          <p>販売中</p>
          <% else %>
         <p>売り切れ</p>
        <% end %>
      </td>

        <td><%= link_to '編集', edit_admins_product_path(@product) %></td>
      </tr>

         <td><%= link_to "削除する", admins_product_path(@product), method: :delete, "data-confirm" => 'Are you sure?', class: "destroy_btn" %>
              </td>

    </tbody>
  </table>

  <%= link_to "Back", admins_products_path, class: "back" %>