<h1>注文履歴一覧</h1>


<table>
	<thead>
		<tr>
			<th>購入日時</th>
			<th>購入者</th>
			<th>注文個数</th>
			<th>注文ステータス</th>
		</tr>
	</thead>
	<tbody>
		<% @orders.each do |order| %>
		<tr>
			<td><%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
			<td><%= link_to order.customer.name_all ,admins_order_path(order.id) %></td>
			<td>order.order_item.quantity</td>
			<td><%= order.buy_status %></td>
		</tr>
		<% end %>
	</tbody>
</table>